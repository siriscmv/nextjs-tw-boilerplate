{
	"name": "nextjs-tw-boilerplate",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"next:dev": "next dev",
		"tw:dev": "npx tailwindcss -i ./src/styles/tw.css -o ./src/styles/globals.css --watch",
		"dev": "run-p tw:dev next:dev",
		"build": "npx tailwindcss -i ./src/styles/tw.css -o ./src/styles/globals.css --minify && next build",
		"start": "next start",
		"lint": "next lint"
	},
	"dependencies": {
		"next": "12.1.6",
		"react": "18.1.0",
		"react-dom": "18.1.0"
	},
	"devDependencies": {
		"@types/node": "17.0.38",
		"@types/react": "18.0.10",
		"@types/react-dom": "18.0.5",
		"eslint": "8.16.0",
		"eslint-config-next": "12.1.6",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.6.2",
		"tailwindcss": "^3.0.24",
		"typescript": "4.7.2"
	}
}
